{%- from 'jira/conf/settings.sls' import jira with context %}

<VirtualHost {{ jira.webserver_fqdn }}:80>
    ServerName {{ jira.webserver_fqdn }}
 
    ProxyRequests Off
    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>
 
    ProxyPass / http://localhost:8080/
    ProxyPassReverse / http://localhost:8080/
    <Location />
        Order allow,deny
        Allow from all
    </Location>
</VirtualHost>
